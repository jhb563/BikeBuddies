<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.androidsgv.bikebuddies.LeaderboardScreen">

    <TextView android:text="@string/leaderboard_title_bar"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:textSize="22sp"
        android:gravity="center"
        android:id="@+id/class_leaderboard_title"
        android:padding="10dp"/>


    <TextView android:text="@string/leaderboard_data_bar_student"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/class_leaderboard_title"
        android:layout_alignParentLeft="true"
        android:padding="10dp"
        android:id="@+id/class_leaderboard_info_student" />

    <TextView android:text="@string/leaderboard_data_bar_time"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/class_leaderboard_title"
        android:layout_toLeftOf="@+id/class_leaderboard_info_mileage"
        android:padding="10dp"
        android:paddingRight="20dp"
        android:paddingEnd="20dp"
        android:id="@+id/class_leaderboard_info_time" />
    <TextView android:text="@string/leaderboard_data_bar_mileage"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:padding="10dp"
        android:layout_below="@+id/class_leaderboard_title"
        android:id="@+id/class_leaderboard_info_mileage" />


    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listViewForLeaderboard"
        android:layout_below="@+id/class_leaderboard_info_student"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

</RelativeLayout>
