<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainScreen">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/profile_image_hdpi"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/history_button"
        android:layout_alignStart="@+id/history_button"
        android:paddingLeft="17dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textViewName"
        android:gravity="center"
        android:layout_marginBottom="52dp"
        android:paddingRight="17dp"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignRight="@+id/findfriendsButton"
        android:layout_alignEnd="@+id/findfriendsButton" />

    <Button android:text="@string/start_ride_button_text"
        android:layout_height="120dp"
        android:layout_width="175dp"
        android:id="@+id/startRideButton"
        android:onClick="startRide"
        android:layout_above="@+id/history_button"
        android:layout_toLeftOf="@+id/findfriendsButton"
        android:layout_toStartOf="@+id/findfriendsButton" />
    <Button android:text="@string/leaderboard_button_text"
        android:layout_height="120dp"
        android:layout_width="175dp"
        android:id="@+id/leaderboardButton"
        android:onClick="goToLeaderboard"
        android:layout_below="@+id/findfriendsButton"
        android:layout_toRightOf="@+id/startRideButton"
        android:layout_toEndOf="@+id/startRideButton" />
    <Button
        android:layout_width="175dp"
        android:layout_height="120dp"
        android:text="@string/find_friends_button_text"
        android:id="@+id/findfriendsButton"
        android:onClick="findFriends"
        android:layout_alignTop="@+id/notifications_button"
        android:layout_toRightOf="@+id/notifications_button"
        android:layout_toEndOf="@+id/notifications_button" />

    <Button
        android:layout_width="175dp"
        android:layout_height="120dp"
        android:text="@string/notification_button_text"
        android:id="@+id/notifications_button"
        android:layout_above="@+id/startRideButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="175dp"
        android:layout_height="120dp"
        android:text="@string/history_button_text"
        android:id="@+id/history_button"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/route_rec_button"
        android:layout_toStartOf="@+id/route_rec_button" />

    <Button
        android:layout_width="175dp"
        android:layout_height="120dp"
        android:text="@string/route_rec_button_text"
        android:id="@+id/route_rec_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />



</RelativeLayout>
