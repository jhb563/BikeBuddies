<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:background="#FFFFFF"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainScreen"
    android:orientation="vertical">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/profile_image_hdpi"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="10dp"
        android:paddingLeft="17dp"/>

    <Button
        android:layout_width="160dp"
        android:layout_height="70dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/buttonName"
        android:text="@string/user_name"
        android:background="@drawable/button_background_lightblue"
        android:gravity="center"
        android:paddingRight="17dp"
        android:onClick="seeNotifications"
        android:layout_toRightOf="@+id/imageView"
        android:layout_toEndOf="@+id/imageView"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="35dp"/>

    <Button
        android:layout_width="160dp"
        android:layout_height="120dp"
        android:text="@string/find_friends_button_text"
        android:id="@+id/findfriendsButton"
        android:onClick="findFriends"
        android:textAllCaps="false"
        android:background="@drawable/button_background_darkblue"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="160dp"
        android:layout_height="120dp"
        android:text="@string/history_button_text"
        android:id="@+id/history_button"
        android:textAllCaps="false"
        android:background="@drawable/button_background_midblue"
        android:onClick="openMyHistory"
        android:layout_alignTop="@+id/leaderboardButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button android:text="@string/start_ride_button_text"
        android:layout_height="120dp"
        android:layout_width="160dp"
        android:id="@+id/startRideButton"
        android:onClick="startRide"
        android:textAllCaps="false"
        android:background="@drawable/button_background_darkblue"
        android:layout_alignTop="@+id/findfriendsButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button android:text="@string/leaderboard_button_text"
        android:layout_height="120dp"
        android:layout_width="160dp"
        android:id="@+id/leaderboardButton"
        android:onClick="goToLeaderboard"
        android:textAllCaps="false"
        android:background="@drawable/button_background_midblue"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />




</RelativeLayout>
